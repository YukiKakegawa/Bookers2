<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">

      <h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<% @user.id == current_user.id %>
  <%= link_to  edit_user_path(@user) do %>
    <i class="fas fa-user-cog"></i>
  <% end %>


<h2>New book</h2>
  <%= form_with model: Book.new, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>

<div>
<%= f.submit'Create Book' %>
</div>

  <% end %>
    </div>

    <div class = "col-md-8 offset-md-1">
      <h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td><%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" , size: "40x40" %></br>
          <%= @user.name %> </td>
    <% end %>
      <td><%= link_to @book.title , book_path(@book) %></td>
      <td><%= @book.body %></td>
      <% if current_user.id == @book.user_id %>
      <td><%= link_to "Edit" , edit_book_path(@book) %></td>
      <td><%= link_to "Destroy" , book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      <% end %>
    </tr>
  </tbody>
</table>

    </div>
  </div>
</div>